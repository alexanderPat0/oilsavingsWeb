<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use App\Services\FirebaseService;

class AuthController extends Controller
{
    protected $firebaseService;

    public function __construct(FirebaseService $firebaseService)
    {
        $this->firebaseService = $firebaseService;
    }

    public function login(Request $request)
    {
        $email = $request->input('email');
        $password = $request->input('password');

        try {
            $signInResult = $this->firebaseService->getAuth()->signInWithEmailAndPassword($email, $password);
            // AquÃ­ podrÃ­as almacenar los detalles del usuario en sesiÃ³n o como prefieras manejarlo
            return redirect('/home');
        } catch (\Exception $e) {
            return back()->withErrors(['error' => 'Authentication failed: ' . $e->getMessage()]);
        }
    }
}
